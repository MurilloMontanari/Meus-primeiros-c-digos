// Qual pacote é mais pesado? Faça um programa que receba o peso de dois pacotes e em seguida exiba apenas o peso do pacote mais pesado.

#include <stdio.h>
#include <stdlib.h>

int main ()
{
	float aux_leitura=0.0;
	float peso_maior=0.0;
	int indice_maior=1;
	int i=0;
	
	for(i=1; i<=2; i++)
	{	
	printf("\n\tEntre com o peso do pacote %d:\t", i);
	scanf("%f", &aux_leitura);
	
	if (aux_leitura > peso_maior)
	{
		peso_maior = aux_leitura;
		indice_maior = i;
	}
}
printf("\n\t O Pacote mais pesado eh o pacote numero %d com %f kg", indice_maior, peso_maior);
return 0;	
}
